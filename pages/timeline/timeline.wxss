/* pages/timeline/timeline.wxss */

/* head 关注用户*/

.tilmeline {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  background:  #F7F7F7;
}

.scroll-head {
  white-space: nowrap;
}

.user-view {
  display: inline-block;
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  background: white;
  
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.user-name {
  font-size: 20rpx;
  color: gray;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
}

/* timeline 用户动态*/

.timeline-item {
  display: flex;
  margin-right: 20rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  flex-direction: column;
  background: white;
  border-radius: 20rpx;
}

.timeline-view {
  display: flex;
  flex-direction: row;
}

.timeline-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.timeline-name {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.timeline-name text {
  margin-left: 20rpx;
  font-size: 20rpx;
  color: gray;
}

.timeline-content {
  font-size: 30rpx;
  color: black;
  margin-top: 20rpx;
}

.video_land{
 width: 90%;
height: 360rpx;
}

.video_vertical{
  width: 60%;
  height: 500rpx;
}

.videoPlayBtn{
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  
}

.video-view{
  margin-top: 20rpx;
  position: relative;
}
.timeline-video{
  width: 100%;
  height: 100%;
    border-radius: 10rpx;
}
